@model ICollection<StudentTracking.EntityLayer.ExamTYT>
@{
    ViewData["Title"] = "Sınavlar";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}



@{ int desk = 1;}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 class="m-0 font-weight-bold text-primary">Sınavlar</h2>
    </div>
    @if (ViewBag.alert != null)
    {
        <div class="alert alert-danger" role="alert">
           Böyle Bir sınav bulunamadı
        </div>
    }
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="text-primary font-weight-bolder text-center">
                        <th rowspan="2" class="align-items-center" width="1%">Sıra</th>
                        <th rowspan="2" class="text-left" width="15%">Sınav Adı</th>
                        <th rowspan="2" width="10%">Sınav Tarihi</th>
                        <th colspan="3" width="10%">Türkçe</th>
                        <th colspan="3" width="10%">Sosyal Bilimler</th>
                        <th colspan="3" width="10%">Matematik</th>
                        <th colspan="3" width="10%">Fen Bilimleri</th>
                        <th colspan="3" width="10%">Toplam</th>
                        <th rowspan="2" width="10%">İşlemler</th>
                    </tr>
                    <tr>
                        <th>Doğru</th>
                        <th>Yanlış</th>
                        <th>Net</th>
                        <th>Doğru</th>
                        <th>Yanlış</th>
                        <th>Net</th>
                        <th>Doğru</th>
                        <th>Yanlış</th>
                        <th>Net</th>
                        <th>Doğru</th>
                        <th>Yanlış</th>
                        <th>Net</th>
                        <th>Doğru</th>
                        <th>Yanlış</th>
                        <th>Net</th>
                    </tr>
                </thead>
                <tbody class="align-content-center">

                    @foreach (var exam in Model)
                    {
                        <tr class="text-center">

                            <td style="color:black;">@desk</td>
                            <td class="text-left text-dark font-weight-bold">@exam.ExamTYTName</td>
                            <td>@(((DateTime)exam.ExamTYTDate).ToString("dd.MM.yyyy"))</td>
                            <td>
                                @exam.TurkceDogru
                            </td>
                            <td>
                                @exam.TurkceYanlis
                            </td>
                            <td>
                                @(exam.TurkceDogru - (exam.TurkceYanlis/4))
                            </td>

                            <td>
                                @exam.SosyalBilimlerDogru
                            </td>
                            <td>
                                @exam.SosyalBilimlerYanlis
                            </td>
                            <td>
                                @(exam.SosyalBilimlerDogru - (exam.SosyalBilimlerYanlis/4))
                            </td>

                            <td>
                                @exam.MatematikDogru
                            </td>
                            <td>
                                @exam.MatematikYanlis
                            </td>
                            <td>
                                @(exam.MatematikDogru - (exam.MatematikYanlis/4))
                            </td>

                            <td>
                                @exam.FenBilimleriDogru
                            </td>
                            <td>
                                @exam.FenBilimleriYanlis
                            </td>
                            <td>
                                @(exam.FenBilimleriDogru - (exam.FenBilimleriYanlis/4))
                            </td>

                            <td>
                                @(exam.TurkceDogru + exam.SosyalBilimlerDogru + exam.MatematikDogru + exam.FenBilimleriDogru)
                            </td>
                            <td>
                                @(exam.TurkceYanlis + exam.SosyalBilimlerYanlis + exam.MatematikYanlis + exam.FenBilimleriYanlis)
                            </td>
                            <td>
                                @(((exam.TurkceDogru + exam.SosyalBilimlerDogru + exam.MatematikDogru + exam.FenBilimleriDogru)- (exam.TurkceYanlis + exam.SosyalBilimlerYanlis + exam.MatematikYanlis + exam.FenBilimleriYanlis) / 4))
                            </td>
                            <td>
                                <div class="row justify-content-lg-center">
                                    <a href="/StudentExam/Edit/@exam.ExamTYTId" class="btn btn-success btn-circle btn-md">
                                        <i class="fas fa-check"></i>
                                    </a>
                                    <a href="/StudentExam/Delete/@exam.ExamTYTId" class="btn btn-danger btn-circle btn-md ml-1">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                            @{desk++; }
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


